{% unless featured_collection_width %}
{% assign featured_collection_width = 'large--one-quarter' %}
{% endunless %}
{% unless featured_collection_size %}

{% assign featured_collection_size = '480x480' %}
{% assign image_size = '480x480' %}
{% assign mobiel_image_size ='480x480' %}
{% endunless %}
<div class="item {{ featured_collection_width }} large--one-quarter">
{% capture collection_title %}{{ collections[featured].title | escape }}{% endcapture %}
<a href="{{ collections[featured].url }}" title="{{ 'collections.general.link_title' | t: title: collection_title }}" class="featured-box">
<div class="featured-box--inner">
<div class="nav-bar desktop_nav featured-box--image">
{% if collections[featured].image %}
{{ collections[featured].image | img_url: image_size | img_tag: collection_title }}
   
  
{% else %}
{{ collections[featured].products.first.featured_image | img_url: image_size | img_tag: collection_title }}
{% endif %}
</div>
<div class="nav-bar mobile_nav featured-box--image">
{% if collections[featured].image %}
{{ collections[featured].image | img_url: mobiel_image_size | img_tag: collection_title }}
{% else %}
{{ collections[featured].products.first.featured_image | img_url: mobiel_image_size | img_tag: collection_title }}
{% endif %}
</div>
</div>
  {% if  settings.enable_featured_title %}
<span class="featured-box--title">{{ collection_title }}</span>
  {% endif %}
  
  </a>
</div>